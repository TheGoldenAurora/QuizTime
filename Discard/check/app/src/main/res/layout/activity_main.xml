<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

    android:scrollbarStyle="insideOverlay"
    style="@android:style/Widget.DeviceDefault.Light.ScrollView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="30dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="20dp"
        tools:context="com.example.android.indiandanceclub.MainActivity"
        android:outlineProvider="background"
        android:background="#ffffcc">

        <ImageView
            android:id="@+id/main_pic"
            android:layout_width="400dp"
            android:layout_height="200dp"
            android:src="@drawable/dancenow"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/title"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ultimate Natya"
            android:textSize="40sp"
            android:fontFamily="sans-serif"
            android:textColor="#cc0052" />

        <TextView
            android:id="@+id/sub_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/main_pic"
            android:textStyle="bold"
            android:text=" Welcome to the Indian Dance Club of Auri High School! "
            android:fontFamily="sans-serif"
            android:textColor="#cc0052"
            android:textSize="25sp"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/info1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#cc0052"
            android:textSize="20sp"
            android:layout_below="@id/sub_title"
            android:text=" As the name suggests, we celebrate the art of dance, in everything we do! We plan dance sequences, practice and put up shows for audiences all over town! Do you love Indian dance as much as we do??? Then come and join us as we celebrate the togetherness that dance binds us with!!"
            />

        <TextView
            android:id="@+id/info2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/info1"
            android:textColor="#cc0052"
            android:textSize="20sp"
            android:text=" We offer classes for those interested to learn and pursue any of the following types of dance:" />

        <TextView
            android:id="@+id/ti1"
            android:layout_width="wrap_content"
            android:textSize="25sp"
            android:textStyle="bold"
            android:padding="10dp"
            android:textColor="#8b0000"
            android:layout_height="wrap_content"
            android:layout_below="@+id/info2"
            android:text="Bharathanatyam"/>


        <ImageView
            android:id="@+id/bhar"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/rukminivijayakumar2"
            android:layout_below="@+id/ti1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/type1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ti1"
            android:layout_toRightOf="@id/bhar"
            android:textColor="#006600"
            android:textSize="15sp"
            android:text="Reportedly as old as 200BC(!), this classical dance form originates in the south-eastern Indian state, Tamil Nadu... It has grown tremendously since then, emerging as 'the most popular classical Indian dance style in India', according to sources."
            />
        <TextView
            android:id="@+id/ti2"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:textColor="#8b0000"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_below="@+id/type1"
            android:text="Kathakali"/>

        <ImageView
            android:id="@+id/kath"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@id/ti2"
            android:src="@drawable/kathak"/>

        <TextView
            android:id="@+id/type2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#006600"
            android:textSize="15sp"
            android:text="Kathakali, quite literally means the art of story-telling. From its origins in the Indian state of Kerala, it has travelled far and wide to reach our Natya Club today... From the beautiful costumes to the amazing expressions, this dance is 'bound to leave the audience spellbound'!"
            android:layout_below="@+id/ti2"
            android:layout_toRightOf="@+id/kath"
            />


        <TextView
            android:id="@+id/ti3"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:textColor="#8b0000"
            android:padding="10dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/type2"
            android:text="Manipuri"/>

        <ImageView
            android:id="@+id/mani"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:src="@drawable/manipuri"
            android:layout_below="@+id/ti3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/type3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#006600"
            android:textSize="15sp"
            android:text="This dance comes from the Indian state of Manipur, at the foothills of the great Himalayas. This dance too comes with a rich history, dating back to times before written records were maintained... This dance is particularly famous for its fancy costumes and make-up."
            android:layout_below="@+id/ti3"
            android:layout_toRightOf="@+id/kath"
            android:layout_toEndOf="@+id/kath" />

        <TextView
            android:id="@+id/contact_us"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/type3"
            android:textColor="#cc0052"
            android:textSize="15sp"
            android:text="
        To join Ultimate Natya, fill out the details below and click the 'Sign Up!' button! Please feel free to contact us for more info!" />

        <TextView
            android:id="@+id/ph.no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:textColor="#cc0052"
            android:layout_below="@id/contact_us"
            android:text="Ph. No.:" />

        <TextView
            android:id="@+id/email"
            android:padding="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#cc0052"
            android:layout_below="@id/ph.no"
            android:text="Email ID:" />

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:padding="20dp"
            android:layout_height="wrap_content"
            android:textColor="#cc0052"
            android:layout_below="@id/email"
            android:text="Address" />


        <TextView
            android:id="@+id/contact_us_ph"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingLeft="10dp"
            android:layout_below="@id/address"

            android:textColor="#000099"
            android:text="Contact us on :  123456789   or   987654321!"
            android:autoLink="phone" />

        <TextView
            android:id="@+id/contact_us_em"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/contact_us_ph"
            android:padding="10dp"

            android:textColor="#000099"
            android:text="or send us an email at abc@xyz.com!"
            android:autoLink="email" />


        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/editText5"
            android:layout_alignTop="@+id/address"
            android:layout_toEndOf="@+id/email"
            android:layout_above="@+id/contact_us_ph"
            android:background="@android:drawable/editbox_dropdown_light_frame"
            android:layout_toRightOf="@+id/email" />

        <Button
            android:text="Sign Up!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#f59b86"
            android:textColor="#000099"
            android:padding="20dp"
            android:layout_below="@id/contact_us_em"
            android:layout_centerHorizontal="true"
            android:id="@+id/button" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/editText2"
            android:selectAllOnFocus="true"
            android:background="@android:drawable/editbox_dropdown_light_frame"
            android:layout_alignBaseline="@+id/ph.no"
            android:layout_alignBottom="@+id/ph.no"
            android:layout_toEndOf="@+id/email"
            android:layout_toRightOf="@+id/email" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/editText3"
            android:background="@android:drawable/editbox_dropdown_light_frame"
            android:layout_alignBaseline="@+id/email"
            android:layout_alignBottom="@+id/email"
            android:layout_toEndOf="@+id/email"
            android:layout_toRightOf="@+id/email" />

    </RelativeLayout>

</ScrollView>